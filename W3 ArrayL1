#include <bits/stdc++.h> 
using namespace std;

int CountZeroOne(int arr[], int size) {
  int zero = 0;
  int one = 0;
  for (int i = 0; i < size; i++) {
    if (arr[i] == 0) {
      zero += 1;
    } else {
      one += 1;
    }
  }
  cout << "0's:" << zero << "\n1's:" << one << endl;
}

void reverseArray (int arr[],int size){
  int left = 0;
  int right = size-1;
  while(left <= right){
    swap(arr[left],arr[right]);
    left++;
    right--;
  }
  for(int i = 0;i<size;i++){
    cout<<arr[i]<<" ";
  }cout<<endl;
}

